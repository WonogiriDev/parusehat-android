<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
            android:id="@+id/layoutProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selama anda menjadi perokok"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:id="@+id/textView" />
            <View
                    android:id="@+id/bottomLayoutBorderA"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/textColorLight"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />
            <ImageView
                    android:id="@+id/fragmentProgressMasihRokok"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/smoking"
                    app:layout_constraintTop_toBottomOf="@+id/bottomLayoutBorderA"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp" />
            <TextView
                    android:id="@+id/fragmentProgressMasihRokokJumlah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1290 batang"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/fragmentProgressMasihRokok"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" />
            <TextView
                    android:id="@+id/fragmentProgressMasihRokokTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rokok telah dihisap"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/fragmentProgressMasihRokokJumlah"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" />
            <View
                    android:id="@+id/bottomLayoutBorderB"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/textColorLight"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/fragmentProgressMasihRokokTv" />
            <ImageView
                    android:id="@+id/fragmentProgressMasihUang"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/wallet"
                    app:layout_constraintTop_toBottomOf="@+id/bottomLayoutBorderB"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp" />
            <TextView
                    android:id="@+id/fragmentProgressMasihUangJumlah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp. 1000000"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/fragmentProgressMasihUang"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" />
            <TextView
                    android:id="@+id/fragmentProgressMasihUangTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Uang telah dihabiskan"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/fragmentProgressMasihUangJumlah"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" />
            <View
                    android:id="@+id/bottomLayoutBorderC"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/textColorLight"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/fragmentProgressMasihUangTv"
                    android:layout_marginTop="8dp" />
            <ImageView
                    android:id="@+id/fragmentProgressMasihHidup"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ghost"
                    app:layout_constraintTop_toBottomOf="@+id/bottomLayoutBorderC"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp" />
            <TextView
                    android:id="@+id/fragmentProgressMasihHidupJumlah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="31h 23j 12m"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/fragmentProgressMasihHidup"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" />
            <TextView
                    android:id="@+id/fragmentProgressMasihHidupTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Harapan hidup berkurang"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/fragmentProgressMasihHidupJumlah"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>