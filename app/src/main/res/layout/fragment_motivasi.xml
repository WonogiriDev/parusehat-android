<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragment.MotivasiFragment">
    <android.support.v7.widget.RecyclerView
            android:id="@+id/fragmentMotivasiRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_motivasi"/>
    <android.support.design.widget.FloatingActionButton android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:id="@+id/fragmentMotivasiFab"
                                                        android:src="@drawable/ic_add_black_24dp"
                                                        android:layout_gravity="bottom|right"
                                                        android:layout_margin="10dp"
    />
</FrameLayout>