<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".fragment.ProgressFragment">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="4000dp">
            <android.support.v7.widget.CardView
                    android:id="@+id/layoutProgress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">
                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/fragmentProgressHariKe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hari ke - 1"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/textColor"
                            android:textSize="20sp"
                            android:gravity="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toTopOf="@+id/fragmentProgressBorderA" />
                    <ImageView
                            android:id="@+id/fragmentProgressBtnReset"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:foreground="?attr/selectableItemBackground"
                            android:focusable="true"
                            android:clickable="true"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent" />
                    <View
                            android:id="@+id/fragmentProgressBorderA"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/textColorLight"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/fragmentProgressBtnReset"
                            android:layout_marginTop="8dp" />
                    <android.support.constraint.ConstraintLayout
                            android:id="@+id/fragmentProgressLayoutUang"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:foreground="?attr/selectableItemBackground"
                            android:focusable="true"
                            android:clickable="true"
                            app:layout_constraintTop_toBottomOf="@+id/fragmentProgressBorderA"
                            app:layout_constraintEnd_toStartOf="@+id/fragmentProgressVerticalBorder"
                            app:layout_constraintStart_toStartOf="parent">
                        <ImageView
                                android:id="@+id/fragmentProgressImgUang"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/cash_100"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginTop="16dp"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginLeft="8dp"
                                android:layout_marginStart="8dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="8dp" />
                        <TextView
                                android:id="@+id/fragmentProgressTvUang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp. 9810100"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="@color/colorPrimary"
                                app:layout_constraintTop_toBottomOf="@+id/fragmentProgressImgUang"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginLeft="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="8dp" />
                        <TextView
                                android:id="@+id/fragmentProgressUang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Uang ditabung"
                                android:fontFamily="@font/roboto_regular"
                                android:textColor="@color/textColor"
                                app:layout_constraintTop_toBottomOf="@+id/fragmentProgressTvUang"
                                android:layout_marginTop="8dp"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginLeft="8dp"
                                android:layout_marginStart="8dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginBottom="16dp" />
                    </android.support.constraint.ConstraintLayout>
                    <android.support.constraint.Guideline
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/vGuideline"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.5" />
                    <View
                            android:id="@+id/fragmentProgressVerticalBorder"
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:background="@color/textColorLight"
                            app:layout_constraintEnd_toStartOf="@+id/vGuideline"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            app:layout_constraintStart_toStartOf="@+id/vGuideline"
                            app:layout_constraintTop_toBottomOf="@+id/fragmentProgressBorderA"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent" />
                    <android.support.constraint.ConstraintLayout
                            android:id="@+id/fragmentProgressLayoutBebas"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:foreground="?attr/selectableItemBackground"
                            android:focusable="true"
                            android:clickable="true"
                            app:layout_constraintStart_toEndOf="@+id/fragmentProgressVerticalBorder"
                            app:layout_constraintTop_toBottomOf="@+id/fragmentProgressBorderA"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toTopOf="@+id/fragmentProgressBorderB">
                        <ImageView
                                android:id="@+id/fragmentProgressImgBebas"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/weather_windy"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="8dp"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginLeft="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="16dp"
                                app:layout_constraintTop_toTopOf="parent" />
                        <TextView
                                android:id="@+id/fragmentProgressTvBebas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1h 23j 50m 3s"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="@color/colorPrimary"
                                app:layout_constraintTop_toBottomOf="@+id/fragmentProgressImgBebas"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="8dp"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginLeft="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp" />
                        <TextView
                                android:id="@+id/fragmentProgressBebas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bebas asap rokok"
                                android:fontFamily="@font/roboto_regular"
                                android:textColor="@color/textColor"
                                app:layout_constraintTop_toBottomOf="@+id/fragmentProgressTvBebas"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="8dp"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginLeft="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp" />
                    </android.support.constraint.ConstraintLayout>
                    <View
                            android:id="@+id/fragmentProgressBorderB"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/textColorLight"
                            app:layout_constraintTop_toBottomOf="@+id/fragmentProgressLayoutUang"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp" />
                    <android.support.constraint.ConstraintLayout
                            android:id="@+id/fragmentProgressLayoutWaktu"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:foreground="?attr/selectableItemBackground"
                            android:focusable="true"
                            android:clickable="true"
                            app:layout_constraintTop_toBottomOf="@+id/fragmentProgressBorderB"
                            app:layout_constraintStart_toEndOf="@+id/fragmentProgressVerticalBorder"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">
                        <ImageView
                                android:id="@+id/fragmentProgressImgWaktu"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/timer_sand"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginTop="16dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="8dp"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginLeft="8dp"
                                android:layout_marginStart="8dp" />
                        <TextView
                                android:id="@+id/fragmentProgressTvWaktu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4j 23m 1d"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="@color/colorPrimary"
                                app:layout_constraintTop_toBottomOf="@+id/fragmentProgressImgWaktu"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="8dp"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginLeft="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp" />
                        <TextView
                                android:id="@+id/fragmentProgressWaktu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Harapan hidup Bertambah"
                                android:fontFamily="@font/roboto_regular"
                                android:textColor="@color/textColor"
                                app:layout_constraintTop_toBottomOf="@+id/fragmentProgressTvWaktu"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="8dp"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginLeft="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="16dp"
                                app:layout_constraintBottom_toBottomOf="parent" />
                    </android.support.constraint.ConstraintLayout>
                    <android.support.constraint.ConstraintLayout
                            android:id="@+id/fragmentProgressLayoutRokok"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:foreground="?attr/selectableItemBackground"
                            android:focusable="true"
                            android:clickable="true"
                            app:layout_constraintTop_toBottomOf="@+id/fragmentProgressBorderB"
                            app:layout_constraintEnd_toStartOf="@+id/fragmentProgressVerticalBorder"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">
                        <ImageView
                                android:id="@+id/fragmentProgressImgRokok"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/smoking_off"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginTop="16dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="8dp"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginLeft="8dp"
                                android:layout_marginStart="8dp" />
                        <TextView
                                android:id="@+id/fragmentProgressTvRokok"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="26 batang"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="@color/colorPrimary"
                                app:layout_constraintTop_toBottomOf="@+id/fragmentProgressImgRokok"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="8dp"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginLeft="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp" />
                        <TextView
                                android:id="@+id/fragmentProgressRokok"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rokok tidak dihisap"
                                android:fontFamily="@font/roboto_regular"
                                android:textColor="@color/textColor"
                                app:layout_constraintTop_toBottomOf="@+id/fragmentProgressTvRokok"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="8dp"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginLeft="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="16dp"
                                app:layout_constraintBottom_toBottomOf="parent" />
                    </android.support.constraint.ConstraintLayout>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
            <include
                    app:layout_constraintTop_toBottomOf="@id/layoutProgress"
                    android:id="@+id/fragmentProgressMiddleLayout"
                    layout="@layout/progress_middle_layout"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            <include
                    app:layout_constraintTop_toBottomOf="@id/fragmentProgressMiddleLayout"
                    android:id="@+id/fragmentProgressBottomLayout"
                    layout="@layout/progress_bottom_layout"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</FrameLayout>